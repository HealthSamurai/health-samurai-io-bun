# Server
PORT=4444
DEV=1

# Database (matches docker-compose.yml defaults)
DATABASE_URL=postgres://healthsamurai:healthsamurai@localhost:5436/healthsamurai

# Google OAuth (create at https://console.cloud.google.com/apis/credentials?project=atomic-ehr)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4444/auth/google/callback
GOOGLE_ALLOWED_DOMAIN=health-samurai.io

# Documentation repos
# Dev mode: reads from {DOCS_REPOS_PATH}/{product-id}-docs (e.g., aidbox-docs, fhirbase-docs)
# Prod mode: clones repos into {DOCS_REPOS_PATH}/{product-id} (default: ./content)
# DOCS_DEV_MODE=true
# DOCS_REPOS_PATH=/path/to/repos

# GitHub Webhook (for auto-deploy)
WEBHOOK_SECRET=

# Zulip Bot (for form notifications)
ZULIP_BOT_EMAIL=
ZULIP_API_KEY=
ZULIP_SERVER=https://chat.health-samurai.io
ZULIP_STREAM=health-samurai.io
